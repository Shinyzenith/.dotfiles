#!/bin/bash
[[ -z "$DISPLAY" ]] && exit 1
choice=$(echo -e "0: Sleep & Lock\n1: Sleep\n2: Shutdown\n3: Reboot\n4: Logout" | dmenu -c -l 5 -i -p "Logout Tool:"|cut -d ':' -f 1)
[[ -z "$choice" ]] && exit 1
case "$choice" in
  0) systemctl suspend && betterlockscreen -l dim ;;
  1) systemctl suspend ;;
  2) poweroff			;;
  3) reboot 			;;
  4) pkill -KILL -u $USER	;;
esac
