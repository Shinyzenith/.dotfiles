#!/bin/sh
function full {
	IMG=~/Pictures/screenshots/$(date | sed "s/\s/-/g" | sed "s/--/-/g").png && wayshot --stdout\
		> $IMG && cat $IMG | wl-copy \
		&& notify-send "Screenshot has been saved and copied to your clipboard" -a "wayshot" -u critical -t 2000
}
function area {
	IMG=~/Pictures/screenshots/$(date | sed "s/\s/-/g" | sed "s/--/-/g").png && wayshot --stdout -s "$(slurp -f '%x %y %w %h')" \
		> $IMG && cat $IMG | wl-copy \
		&& notify-send "Screenshot has been saved and copied to your clipboard" -a "wayshot" -u critical -t 2000
}

whichMode(){
    if [ "$1" = "full" ] || [ "$1" = "" ]; then
        full
    elif [ "$1" = "area" ]; then
        area
    else
        notify-send "Please select 'area' or 'full'"
    fi
}
whichMode "$@"
